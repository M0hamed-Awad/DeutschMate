<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/category_card_bg"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.2">

        <TextView
            android:id="@+id/main_activity_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="My Family"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/main_activity_category_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Words"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/main_activity_category_icon"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Family Members Icon"
        android:src="@drawable/family_members_icon"/>

</LinearLayout>